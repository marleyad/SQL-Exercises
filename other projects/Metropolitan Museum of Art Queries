 SELECT *
 FROM met
 LIMIT 10;

 -- columns: id, department, category, title, artist, date, medium, country

 SELECT COUNT(*)
 FROM met;

 -- Total Count of the art pieces

SELECT category, COUNT(*)
FROM met
WHERE category LIKE '%celery%';

-- Counting the number of 'celery' category pieces

SELECT title, medium, date
FROM met
WHERE date LIKE '%1600%';

-- Finding the oldest pieces

SELECT country, COUNT(*)
FROM met
WHERE country IS NOT NULL
GROUP BY country
ORDER BY COUNT(*) DESC
LIMIT 10;

--- Finding the top 10 countries with the most pieces. I have to disqualify pieces with a NULL value in country.

SELECT category, COUNT(*)
FROM met
GROUP BY category
HAVING COUNT(*) > 100
ORDER BY COUNT(*) DESC;

-- Looking for categories that have more than 100 pieces

SELECT medium, COUNT(*)
FROM met
WHERE medium LIKE '%gold%' 
  OR medium LIKE '%silver%'
GROUP BY 1
ORDER BY 2 DESC;

-- Finding and counting the number of pieces where the medium is gold or silver. I will sort them in descending order.
