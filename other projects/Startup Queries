SELECT * 
FROM startups;

SELECT COUNT(*)
FROM startups;

SELECT SUM(valuation)/1000000000 AS 'Total Valuation (In Billions)'
FROM startups;

SELECT MAX(valuation)/1000000000 AS 'Max Valuation In Seed Stage (In Billions)'
FROM startups
WHERE stage = 'Seed';

SELECT name AS 'Oldest Company Founded', MIN(founded) AS 'Year Founded'
FROM startups;

SELECT ROUND(AVG(valuation)/1000000000,2) AS 'Average Valuation (In Billion)'
FROM startups;

SELECT category, ROUND(AVG(valuation), 2) AS 'Average Valuation'
FROM startups
GROUP BY category
ORDER BY AVG(valuation) DESC;

SELECT category, COUNT(*)
FROM startups
GROUP BY category
HAVING COUNT(*) > 3
ORDER BY COUNT(*) DESC;

SELECT location AS 'Location', ROUND(AVG(employees), 2) AS 'Average Employee Size'
FROM startups
GROUP BY location;

SELECT location AS 'Location', ROUND(AVG(employees), 2) AS 'Average Employee Size'
FROM startups
GROUP BY location
HAVING ROUND(AVG(employees), 2) > 500
ORDER BY ROUND(AVG(employees), 2) DESC;
